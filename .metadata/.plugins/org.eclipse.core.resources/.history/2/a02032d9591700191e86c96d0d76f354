
public class FizzBuzz {
	
	private int n;
	
	public FizzBuzz(int n) {
		this.n = n;
	}
	
	public String getResult() {
		String r = ""; // stores return value
		
		if (isDivisibleByThree(n)) {
			r += "Fizz";
			if (isDivisibleByFive(n))
				r += "Buzz";
		}
		else if (isDivisibleByFive(n))
			r += "Buzz";
		else
			r += String.valueOf(n);
		
		return r;
	}
	
	private boolean isDivisbileByThree() {
		return n % 3 == 0;
	}
	
	private boolean isDivisbileByFive() {
		return n % 5 == 0;
	}

	public static void main(String[] args) {
		// test class here
		for (int n = 1; n < 31; n++) {
			FizzBuzz fb = new FizzBuzz(n);
			System.out.println(fb.getResult());
		}		
	}

}
