import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.AfterAll;
import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeAll;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

public class FizzBuzzTest {
	
	private FizzBuzz fb;
	
	public FizzBuzzTest() {
		fb = new FizzBuzz();
	}

	@Test
	public void shouldPrintNumber() {
		assertEquals("2", fb.getResult(2), "2 should produce 2");
	}
	
	@Test
	public void shouldPrintFizz() {
		assertEquals("Fizz", fb.getResult(3), "3 should produce 'Fizz'");
	}
	
	@Test
	public void shouldPrintBuzz() {
		assertEquals("Buzz", fb.getResult(5), "5 should produce 'Buzz'");
	}
	
	@Test
	public void shouldPrintFizzBuzz() {
		assertEquals("FizzBuzz", fb.getResult(15), "15 should produce 'FizzBuzz'");
	}
}
